            width: 150,
            height: 400,
            fromCenter: false,
            mousemove: function (layer) {
                //让area_line直线跟随鼠标
                $(this).animateLayer('area_line', {
                    opacity:1,
                    x: layer.x, y: layer.eventY
                },0)
            }
        }).drawRect({
            strokeStyle: '#000',
            strokeWidth: 2,
            layer: true,
            draggable: false,
            name: 'curve_area_2',
            x: 250, y: 0,
            width: 50,
